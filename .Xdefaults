#include ".Xresources"

! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
rofi*color-enabled: true

!    color            bg       fg     bg al    hl bg    hl fg
rofi*color-normal: #232c31, #EBEBEB, #232c31, #0EE9F7, #232c31
rofi*color-active: #232c31, #EBEBEB, #232c31, #0EE9F7, #232c31
rofi*color-urgent: #232c31, #0EE9F7, #232c31, #0EE9F7, #232c31

!    color-window  background  border separator
rofi*color-window: #232c31, #61F420, #E60087

!rofi*modi:				run,window,ssh

rofi*separator-style:	solid
!rofi*fullscreen:		true
rofi*lines:				5
rofi*fuzzy:				true
rofi*location:			0
rofi*padding:			35
rofi*hide-scrollbar:	true
rofi*font:				RobotoMono Nerd Font 18
rofi*bw:				2
rofi*width:				1400
rofi*line-margin:		1
rofi*switchers:         window,run,ssh
rofi*opacity:           50
rofi*columns:           1
rofi*fake-transparency: false
rofi*fake-background:   screenshot
rofi*fullscreen:        false
rofi*bc:                white
rofi*yoffset:           -350
rofi*xoffset:           0
rofi*fixed-num-lines:   false
rofi*hmode:             false
rofi*terminal:          xfce4-terminal
rofi*ssh-client:        ssh
rofi*ssh-command:       {terminal} -e {ssh-client} {host}
rofi*run-command:       {cmd}
rofi*run-shell-command: {terminal} -e {cmd}
rofi*disable-history:   false
rofi*levenshtein-sort: true
rofi*sidebar-mode: true

*internalBorder:	0
*scrollWithBuffer: true
*secondaryWheel: 1
*lineSpace:		3