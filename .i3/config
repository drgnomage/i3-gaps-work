bar {
    output VGA1
    i3bar_command i3bar
    position top
    font pango:Monospace, Awesome 10
    strip_workspace_numbers yes
    separator_symbol "■"
    bindsym button4 nop
    bindsym button5 nop
    tray_output VGA1
    tray_padding 5
    height $height
	hidden_state hide
	mode hide

    colors {
        statusline         #eeeeee
        background         #232c31
        separator          #16a085

#                          BORDER       BACKGROUND  TEXT
        focused_workspace  #16a085		#16a085     #232c31
        inactive_workspace #16a085		#232c31		#eeeeee
        active_workspace   #888888		#888888		#232c31
        urgent_workspace   #16a085		#16a085		#232c31
        binding_mode       #16a085		#16a085		#232c31
    }
}
