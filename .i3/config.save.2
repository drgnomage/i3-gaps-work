	id conky
        position bottom
        $font
        status_command conky -c ~/.i3/conkyrc.bak
	#mode dock
        height 28
	workspace_buttons no

        colors {

                background      $back
                statusline      $text
                separator       $text

                                 ### Edge # Back # Text ###
